<Window x:Class="Comida.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comida"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <Style x:Key="ItemTitle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Taco Salad"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Tipo}" Value="China">
                    <Setter Property="FontFamily" Value="Chinese Wok Food St"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Tipo}" Value="Americana">
                    <Setter Property="FontFamily" Value="Slim Summer"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        
        <DataTemplate DataType="{x:Type ListBox}" x:Key="DishItemTemplate">
            <DockPanel Width="200">
                <Viewbox DockPanel.Dock="Top" Height="70">
                    <TextBlock Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ItemTitle}"></TextBlock>
                </Viewbox>
                <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
                    <Image x:Name="flagImage" DockPanel.Dock="Left"/>
                    <Image x:Name="sulfitoImage" DockPanel.Dock="Right"/>
                    <Image x:Name="lecheImage" DockPanel.Dock="Right"/>
                    <Image x:Name="sojaoImage" DockPanel.Dock="Right"/>
                    <Image x:Name="glutenImage" DockPanel.Dock="Right"/>

                </DockPanel>
                <Image x:Name="mainImage" Source="{Binding Imagen}"  Width="200" Height="200"  Stretch="UniformToFill"/>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    
    
    <Grid Background="LightBlue">
        <Border Margin="8" BorderBrush="Black" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Width="200" Background="LightGray" DataContext="{Binding  CurrDish}">
                    <TextBlock>Nombre del plato</TextBlock>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBlock>Foto del plato</TextBlock>
                    <TextBox Text="{Binding Imagen}"></TextBox>
                    <TextBlock>Tipo de comida</TextBlock>
                    <ComboBox ItemsSource="{Binding Countries}"></ComboBox>
                    <GroupBox Header="Alérgenos">
                        <UniformGrid>
                            <CheckBox Margin="10" IsChecked="{Binding Leche}" >Leche</CheckBox>
                            <CheckBox Margin="10" IsChecked="{Binding Soja}" >Soja</CheckBox>
                            <CheckBox Margin="10" IsChecked="{Binding Gluten}" >Gluten</CheckBox>
                            <CheckBox Margin="10" IsChecked="{Binding Sulfitos}" >Sulfitos</CheckBox>
                        </UniformGrid>
                    </GroupBox>

                </StackPanel>
                <ListBox x:Name="mainListBox" ItemsSource="{Binding Dishes}" SelectedItem="{Binding CurrDish}" ItemTemplate="{StaticResource DishItemTemplate}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel></WrapPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </DockPanel>
        </Border>
       
        
    </Grid>
</Window>
